<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Farmer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/primary_dark_variant_light</item>
        <item name="colorOnPrimary">@color/primaryText_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_light</item>
        <item name="colorSecondaryVariant">@color/secondary_light_variant_light</item>
        <item name="colorOnSecondary">@color/secondaryText_light</item>
        <item name="colorSurface">@color/primary_light_variant_light</item>
        <item name="colorOnSurface">@color/primaryText_light</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary_dark_variant_light</item>
        <item name="errorIconTint">@color/error_color_light</item>
    </style>
    <style name="BottomSheetTheme" parent="Theme.Farmer">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
</resources>